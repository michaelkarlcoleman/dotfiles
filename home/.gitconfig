[user]
	email = tutufan@users.noreply.github.com
	name = Michael Coleman
[core]
	excludesfile = ~/.gitignore
[push]
	default = simple
[credential]
	helper = cache --timeout=28800
[github]
        user = tutufan
[color]
	ui = auto
        diff = auto
        grep = auto
        interactive = auto
        showbranch = auto
        status = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[alias]
        l = log --oneline
	lgo = log --oneline --graph --decorate
	ls = ls-files
        co = checkout
        st = status
        df = diff --stat --word-diff
        dw = diff --word-diff
        lg = log -p --stat
        dst = diff --staged
        sb = status -sb

        lh = log --graph
        la = !git lh --date-order --all 2> /dev/null
        lb = log --graph --simplify-by-decoration
        lba = !git lb --all
        h = !git --no-pager log --graph -n 15
        a = !git --no-pager la -n 15
